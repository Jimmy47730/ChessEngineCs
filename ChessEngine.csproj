<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <!-- Don't explicitly include C# files; SDK includes them by default -->
    <!-- Include non-code files, exclude C# sources and build outputs -->
    <None Include="**\*" Exclude="**\*.cs;bin\**;obj\**" CopyToOutputDirectory="Never" />
  </ItemGroup>

  <!-- Exclude test project sources that live in a subfolder so they don't get
       compiled into the main executable project. Tests are in
       ChessEngine.Tests and are a separate project. -->
  <ItemGroup>
    <Compile Remove="ChessEngine.Tests\**\*.cs" />
    <None Remove="ChessEngine.Tests\**\*" />
  </ItemGroup>
</Project>
